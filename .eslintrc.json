{
  "extends": ["eslint:recommended", "airbnb-base"],
  "env": {
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "semi": ["error", "never"],
    "arrow-parens": 0,
    "no-throw-literal": 0,
    "prefer-promise-reject-errors": 0
  },
  "plugins": [
    "import"
  ]
}
